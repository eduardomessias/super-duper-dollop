extends view

block head
  

block body
  
  h1 Build studio playground
  
  #playground(style="width:800px;height:600px;border:1px solid grey")
  
  script(src="requirejs/require.min.js")
  script.
    require.config({ paths: { 'vs': '../node_modules/monaco-editor/min/vs' }});

    require(['vs/editor/editor.main'], function() {
      var editor = monaco.editor.create(document.getElementById('playground'), {
        value: [
          'function x() {',
          '\tconsole.log("Hello world!");',
          '}'
        ].join('\n'),
        language: 'javascript'
      });
    });
  
  