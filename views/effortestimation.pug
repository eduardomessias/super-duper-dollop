extends view

block head
  link(rel='stylesheet', type='text/css', href='https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/af-2.3.4/b-1.6.1/b-colvis-1.6.1/b-flash-1.6.1/b-html5-1.6.1/b-print-1.6.1/cr-1.5.2/fc-3.3.0/fh-3.1.6/kt-2.5.1/r-2.2.3/rg-1.1.1/rr-1.2.6/sc-2.0.1/sp-1.0.1/sl-1.3.1/datatables.min.css')

block body

  .row.m-2
    .col-2
      #v-pills-tab.nav.flex-column.nav-pills(role='tablist' aria-orientation='vertical')
        a#v-pills-overview-tab.nav-link.active(data-toggle='pill' href='#v-pills-overview' role='tab' aria-controls='v-pills-home' aria-selected='true') Overview
        a#v-pills-details-tab.nav-link(data-toggle='pill' href='#v-pills-details' role='tab' aria-controls='v-pills-home') Details
    .col-10
      #v-pills-tabContent.tab-content
        #v-pills-overview.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='v-pills-overview-tab')
          container
            table#table-overview.table
              thead
                tr
                  th(scope='col') #
                  th(scope='col') First
                  th(scope='col') Last
                  th(scope='col') Handle
              tbody
                tr
                  th(scope='row') 1
                  td Mark
                  td Otto
                  td @mdo
                tr
                  th(scope='row') 2
                  td Jacob
                  td Thornton
                  td @fat
                tr
                  th(scope='row') 3
                  td Larry
                  td the Bird
                  td @twitter
        #v-pills-details.tab-pane.fade.show(role='tabpanel' aria-labelledby='v-pills-details-tab')
          form
            .form-group
              label(for='ref') Reference
              input#ref.form-control(type='text' placeholder='Backlog item reference')
            .form-group
              label(for='approach') Estimation approach
              select#approach.form-control
                option(value='analogy') Analogy-based estimation
                option(value='wbs') WBS-based (bottom up) estimation
                option(value='parametric') Parametric models
                option(value='size') Size-based estimation models
                option(value='group') Group estimation
                option(value='mechanical') Mechanical combination
                option(value='judgmental') Judgmental combination
            .form-group
              label(for='category')
              select#category.form-control
                option(value='formal') Formal estimation model
                option(value='expert') Expert estimation
                option(value='combination') Combination-based estimation

  //.container
    h1 Software development effort estimation
    
    

